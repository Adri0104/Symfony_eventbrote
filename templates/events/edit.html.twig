{% extends 'layouts/base.html.twig' %}

{% block title 'Editing ' ~ event.name %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="mt-5 h2 font-weight-light">Editing {{ event.name }}</h1>
            {{ form_start(formEdit) }}
                {{ form_widget(formEdit) }}
                <p>
                    <input type="submit" class="btn btn-primary" value="Update"> | <a href="{{ path('events.index') }}">Cancel</a>
                </p>
            {{ form_end(formEdit) }}
        </div>
    </div>
{% endblock %}
