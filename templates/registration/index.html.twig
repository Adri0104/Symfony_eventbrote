{% extends 'layouts/base.html.twig' %}

{% block title 'Registrations for ' ~ event.name%}

{% block body %}
    <h2 class="mb-3 font-weight-light">Registrations for <a href="{{ path('events.show', {'id': event.id}) }}">{{ event.name }}</a></h2>
    {% for registration in registrations %}
        <li>
            <a href="mailto:{{ registration.email }}">({{ registration.name }})</a> &bull; {{ registration.event.name }} &bull; {{ registration.howHeard }}
        </li>
    {% else %}
        <p>No registrations <a href="{{ path('registrations.create', {'event': event.id}) }}">Here</a></p>
    {% endfor %}
{% endblock %}
